{
  "name": "@demouth/mb_strimwidth",
  "version": "1.0.1",
  "description": "mb_strimwidth ported to JavaScript. Truncates string to specified width, where halfwidth characters count as 1, and fullwidth characters count as 2.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "browser": "dist/mb_strimwidth.js",
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "lint": "eslint --fix 'src/**/*.ts'",
    "lint:types": "tsc --noEmit"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  },
  "repository": "git@github.com:demouth/mb_strimwidth.git",
  "author": "demouth <yuya@demouth.net>",
  "license": "MIT",
  "keywords": [
    "string",
    "character",
    "unicode",
    "fullwidth",
    "full-width",
    "full",
    "ansi",
    "cjk",
    "chinese",
    "japanese",
    "korean"
  ],
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "jest": "^27.5.1",
    "rollup": "^2.70.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.1.4",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@demouth/mb_strwidth": "^2.0.1"
  }
}
